<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="pleasework.View.SettingsPage"
             BackgroundColor="{DynamicResource AppBackgroundColor}">
    <ContentPage.Content>
        <StackLayout>

            <StackLayout Orientation="Horizontal">
                <Label Text="Text size" FontSize="{DynamicResource AppFontSize}"/>
                <Label x:Name="fontSizeValue" Text="{Binding fontValue}" HorizontalOptions="Center" FontSize="{DynamicResource AppFontSize}"/>
            </StackLayout>
            
            <Stepper x:Name="fontSizeStepper" Value="15" Minimum="5" Maximum="40" Increment="1" ValueChanged="Stepper_ValueChanged"
                     HorizontalOptions="Center"/>
            
            <StackLayout Orientation="Horizontal">
            <Label   Text="Night mode" FontSize="{DynamicResource AppFontSize}"/>
            <Switch x:Name="colorSwitch" IsToggled="false" Toggled="ColorSwitch_Toggled"/>
            </StackLayout>
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>