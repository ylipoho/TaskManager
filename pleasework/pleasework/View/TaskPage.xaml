<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="pleasework.View.TaskPage">
    <ScrollView
        HorizontalOptions="FillAndExpand"
        VerticalOptions="FillAndExpand"
        Orientation="Vertical">

        <StackLayout
            Padding="60, 20"
            VerticalOptions="Center">

            <Label x:Name="title"/>

            <Label x:Name="description"/>

            <Label x:Name="priority"/>

            <Label x:Name="deadline"/>

            <Label x:Name="creator"/>

            <Label x:Name="performer"/>

            <Label x:Name="forRole"/>

            <Label x:Name="status"/>

            <Button BackgroundColor="Maroon" Text="delete" Clicked="Button_Clicked"/>

        </StackLayout>
    </ScrollView>
</ContentPage>